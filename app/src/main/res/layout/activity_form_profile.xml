<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormProfile">

    <View
        android:id="@+id/contprofile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/contprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="@id/contprofile"
        app:layout_constraintEnd_toEndOf="@id/contprofile"
        app:layout_constraintTop_toTopOf="@id/contprofile"
        app:layout_constraintBottom_toBottomOf="@id/contprofile"
        />

    <ImageView
        android:id="@+id/icon_person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/contprofile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdasda"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/contprofile"
        app:layout_constraintStart_toEndOf="@id/icon_person"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@id/icon_person"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdasda"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/name_profile"
        app:layout_constraintStart_toEndOf="@id/icon_email"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_deslogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:text="Deslogar"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/email_profile"

        />

</androidx.constraintlayout.widget.ConstraintLayout>